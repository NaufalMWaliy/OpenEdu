<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="religion_form_view">
		<field name="name">religion.form</field>
		<field name="model">oe.religion</field>
		<field name="arch" type="xml">
			<form string="Religon Form">
				<sheet>
					<group>
						<field name="name"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="religion_form_action">
		<field name="name">religion.action</field>
		<field name="res_model">oe.religion</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
</odoo>