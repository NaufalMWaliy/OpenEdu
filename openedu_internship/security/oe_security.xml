<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="module_category_openedu" model="ir.module.category">
            <field name="name">OpenEdu</field>
            <field name="description">Lorem Ipsum</field>
        </record>
        <record id="group_oe_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="module_category_openedu"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="ir.rule" id="student_cv_rule">
            <field name="name">Student CV Rule</field>
            <field name="model_id" ref="model_oe_cv" />
            <field name="groups"
                eval="[(4, ref('openedu_internship.group_oe_student'))]" />
            <field name="domain_force">['|', ('student_id.user_id','=',user.id), ('student_id.user_id','in', user.child_ids.ids)]</field>
        </record>
	</data>
</odoo>